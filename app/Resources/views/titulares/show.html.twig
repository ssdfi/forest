{% extends 'base.html.twig' %}

{% block body %}
{{ include('flash/message.html.twig') }}
<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Titular</h3>
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Nombre:</dt>
          <dd>{{ titular.nombre }}</dd>
          <dt>DNI:</dt>
          <dd>{{ titular.dni }}</dd>
          <dt>CUIT:</dt>
          <dd>{{ titular.cuit }}</dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h4>Titulares de Expedientes</h4>
    {{ include('expedientes/show_list.html.twig', {'expedientes': titular.expediente}) }}
  </div>
  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <h4>Productor Agrupado con Plantación</h4>
    {{ include('expedientes/show_list.html.twig', {'expedientes': productor_con_plantacion}) }}
  </div>
  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <h4>Productor Agrupado sin Plantación</h4>
    {{ include('expedientes/show_list.html.twig', {'expedientes': productor_sin_plantacion}) }}
  </div>
</div>
{% endblock %}
