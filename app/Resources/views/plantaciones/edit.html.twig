{% extends 'base.html.twig' %}

{% block body %}
	{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
	<div class="row">
		<div class="col-md-5">
			<h1>Editar Plantación</h1>
			{{ include('titulares/modal_search.html.twig') }}
			<div id="nuevas-plantaciones-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="plantaciones-modal-label" aria-hidden="true">
				<div class="modal-dialog modal-sm">
					<div class="modal-content">
						<div class="modal-header">
							<button class="close" type="button" data-dismiss="modal">
								<span aria-hidden="true">×</span>
								<span class="sr-only">Cerrar</span>
							</button>
							<h4 id="plantaciones-modal-label" class="modal-title">Nuevas Plantaciones</h4>
						</div>
						<div class="modal-body">
							<textarea id="plantaciones_nuevas_ids" class="form-control" name="plantaciones_nuevas_ids" placeholder="Agregue un ID por línea" rows="10"></textarea>
						</div>
						<div class="modal-footer">
							<button class="btn btn-default" type="button" data-dismiss="modal">Cancelar</button>
							<button id="plantaciones-modal-add" class="btn btn-primary" type="button">Agregar</button>
						</div>
					</div>
				</div>
			</div>
			{{ form_start(edit_form) }}

			<div class="form-group">
				{{ form_label(edit_form.titular) }}
				<div class="input-group">
					{{ form_errors(edit_form.titular) }}
					{{ form_widget(edit_form.titular) }}
					<span class="input-group-btn">
						<button id="add-titular" class="btn btn-default" type="button" data-toggle="modal" data-target="#titulares-modal">
							<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
						</button>
						<button id="remove-titular" class="btn btn-default" type="button">
							<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						</button>
					</span>
				</div>
			</div>

			<div class="form-group">
				{{ form_label(edit_form.anioPlantacion) }}
				{{ form_errors(edit_form.anioPlantacion) }}
				{{ form_widget(edit_form.anioPlantacion) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.tipoPlantacion) }}
				{{ form_errors(edit_form.tipoPlantacion) }}
				{{ form_widget(edit_form.tipoPlantacion) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.nomenclaturaCatastral) }}
				{{ form_errors(edit_form.nomenclaturaCatastral) }}
				{{ form_widget(edit_form.nomenclaturaCatastral) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.estadoPlantacion) }}
				{{ form_errors(edit_form.estadoPlantacion) }}
				{{ form_widget(edit_form.estadoPlantacion) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.distanciaPlantas) }}
				{{ form_errors(edit_form.distanciaPlantas) }}
				{{ form_widget(edit_form.distanciaPlantas) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.cantidadFilas) }}
				{{ form_errors(edit_form.cantidadFilas) }}
				{{ form_widget(edit_form.cantidadFilas) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.distanciaFilas) }}
				{{ form_errors(edit_form.distanciaFilas) }}
				{{ form_widget(edit_form.distanciaFilas) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.densidad) }}
				{{ form_errors(edit_form.densidad) }}
				{{ form_widget(edit_form.densidad) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.fuenteInformacion) }}
				{{ form_errors(edit_form.fuenteInformacion) }}
				{{ form_widget(edit_form.fuenteInformacion) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.anioInformacion) }}
				{{ form_errors(edit_form.anioInformacion) }}
				{{ form_widget(edit_form.anioInformacion) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.fuenteImagen) }}
				{{ form_errors(edit_form.fuenteImagen) }}
				{{ form_widget(edit_form.fuenteImagen) }}
			</div>

			<div class="form-group">
				{{ form_label(edit_form.fechaImagen) }}
				{{ form_errors(edit_form.fechaImagen) }}
				{{ form_widget(edit_form.fechaImagen) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.baseGeometricaId) }}
				{{ form_errors(edit_form.baseGeometricaId) }}
				{{ form_widget(edit_form.baseGeometricaId) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.estratoDesarrollo) }}
				{{ form_errors(edit_form.estratoDesarrollo) }}
				{{ form_widget(edit_form.estratoDesarrollo) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.usoForestal) }}
				{{ form_errors(edit_form.usoForestal) }}
				{{ form_widget(edit_form.usoForestal) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.usoAnterior) }}
				{{ form_errors(edit_form.usoAnterior) }}
				{{ form_widget(edit_form.usoAnterior) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.objetivoPlantacion) }}
				{{ form_errors(edit_form.objetivoPlantacion) }}
				{{ form_widget(edit_form.objetivoPlantacion) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.activo) }}
				{{ form_errors(edit_form.activo) }}
				{{ form_widget(edit_form.activo) }}
			</div>
			<div class="form-group">
				{{ form_label(edit_form.comentarios) }}
				{{ form_errors(edit_form.comentarios) }}
				{{ form_widget(edit_form.comentarios) }}
			</div>
			<hr>
			<h3>Histórico</h3>
			<div class="form-group">
				{{ form_label(edit_form.historico) }}
				{{ form_errors(edit_form.historico) }}
				{{ form_widget(edit_form.historico) }}
			</div>
			<div class="form-group" style="margin-top: -10px;">
				<div class="col-sm-9 col-sm-offset-3">
					<div class="pull-right">
						<button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#titulares-modal" id="add-titular">
							<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
							Asociar
						</button>
						<button type="button" class="btn btn-default btn-xs" id="remove-titular">
							<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
							Eliminar
						</button>
					</div>
				</div>
			</div>
			{{ form_label(edit_form.copiarDatos) }}
			{{ form_errors(edit_form.copiarDatos) }}
			{{ form_widget(edit_form.copiarDatos) }}

			{{ form_label(edit_form.activarNuevas) }}
			{{ form_errors(edit_form.activarNuevas) }}
			{{ form_widget(edit_form.activarNuevas) }}
			<hr>
			<a id="cancel-plantacion" class="btn btn-default" onClick="history.go(-1);return true;">Cancelar</a>
			<input id="save-plantacion" class="btn btn-primary pull-right" type="submit" value="Guardar"/>
			{{ form_end(edit_form) }}
		</div>
	</div>
{% endblock %}
