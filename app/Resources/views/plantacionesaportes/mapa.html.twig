{% extends 'base.html.twig' %}
{% block body %}
	{{ include('flash/message.html.twig') }}
	<div class="row">
		<!-- Modal -->
		<div class="modal fade" id="modalVer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog modal-lg" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalLabel">Ver Aporte</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body modalVerBody">
		        ...
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		      </div>
		    </div>
		  </div>
		</div>
		<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog modal-lg modalEditarDialog" role="document">
		    <div class="modal-content">
		      <div class="modal-body modalEditarBody">
		        ...
		      </div>
		    </div>
		  </div>
		</div>

		<div id="was">
			<div class="left-inner-addon">
		        <i class="fa fa-map-marker" style="left:calc(50% - 250px);"></i>
		        <input  id="places" type="text"
		               class="form-control typeahead" 
		               placeholder="id" />
		    </div>
		</div>

		<div id="buscar">
			<div class="left-inner-addon">
		        <form method = "post">
							<div><select name="provincia" id="provincia" class="form-control">
							<option value="">Seleccione provincia</option>
							
							{% for provincia in provincias %}
							<option value="{{provincia.id}}">{{provincia.nombre}}</option>
							{% endfor %}
							</select></div>
							<div><select name="departamento" id="departamento" class="form-control">
							</select></div>
							<div><input type="submit" value="buscar"></div>
						</form>
		    </div>
		</div>

        <div class="col-md-12">
            {{ include('plantacionesaportes/mapa_insert.html.twig', {'plantaciones': plantaciones}) }}
        </div>
	</div>

{% endblock %}
{% block javascripts %}
	{{parent()}}
	<script src="{{ asset('js/plantacionesAportes.js') }}"></script>
{% endblock %}
