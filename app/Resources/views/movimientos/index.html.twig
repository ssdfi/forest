{% extends 'base.html.twig' %}

{% block body %}
	{{ include('flash/message.html.twig') }}
	<div class="col-md-3">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Movimiento</h3>
			</div>
			<div class="panel-body">
				<dl class="dl-horizontal">
					<dt>ID Expediente:</dt>
					<dd>
						<a href="/expedientes/{{expediente}}">{{expediente}}</a>
					</dd>
					<dt>ID Movimiento:</dt>
					<dd>{{movimiento.id}}</dd>
					<dt>Número de Ficha:</dt>
					<dd>{{movimiento.numeroFicha}}</dd>
					<dt>Etapa:</dt>
					<dd>{{movimiento.etapa}}</dd>
					<dt>Año de Inspección:</dt>
					<dd>{{movimiento.anioInspeccion}}</dd>
					<dt>Fecha de Entrada:</dt>
					<dd>{{movimiento.fechaEntrada|date('d-m-Y')}}</dd>
					<dt>Fecha de Salida:</dt>
					<dd>
						{% if movimiento.fechaSalida %}
							{{movimiento.fechaSalida|date('d-m-Y')}}
						{% endif %}
					</dd>
					<dt>Estabilidad Fiscal:</dt>
					<dd>
						{% if movimiento.estabilidadFiscal %}
							<span class="glyphicon glyphicon-ok"></span>
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Auditar:</dt>
					<dd>
						{% if movimiento.auditar %}
							<span class="glyphicon glyphicon-ok"></span>
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Inspector:</dt>
					<dd>
						{% if movimiento.inspector %}
							{{movimiento.inspector.descripcion}}
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Reinspector:</dt>
					<dd>
						{% if movimiento.reinspector %}
							{{movimiento.reinspector.descripcion}}
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Responsable:</dt>
					<dd>
						{% if movimiento.responsable %}
							{{movimiento.responsable.nombre}}
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Destino:</dt>
					<dd>
						{% if movimiento.destino %}
							{{movimiento.destino.descripcion}}
						{% else %}
							<span class="glyphicon glyphicon-remove"></span>
						{% endif %}
					</dd>
					<dt>Validador:</dt>
					<dd>
						{% if movimiento.validador %}
							{{movimiento.validador.nombre}}
						{% endif %}
					</dd>
					<dt>Observación:</dt>
					<dd>{{movimiento.observacion}}</dd>
					<dt>Observación Interna:</dt>
					<dd>{{movimiento.observacionInterna}}</dd>
				</dl>
			</div>
			<div class="panel-footer">
				{% if movimiento.validador %}
					<span class="label label-success">Validado</span>
				{% else %}
					<span class="label label-danger">Sin validar</span>
				{% endif %}
			</div>
		</div>
	</div>
	<div class="col-md-9">
		<h4>Actividades</h4>
		{{ include('actividades/show.html.twig', { 'actividades': actividades }) }}
	</div>
{% endblock %}
