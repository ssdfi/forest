		<a id="nav-new-expediente" href="{{ path('movimientos_new', {'id': expediente.id }) }}">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			Nuevo Movimiento
		</a>
	</li>
	{% if is_granted('ROLE_ADMIN') %}
		<li>
			<a>
				{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-default btn-xs" onclick="return confirm('¿Está seguro que desea eliminar el Expediente?')">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					Eliminar Expediente
				</button>
				{{ form_end(delete_form) }}
			</a>
		</li>
	{% endif %}
	<li class="navbar-primary">
		<a id="nav_expediente" href="{{ path('expedientes_show', {'id': expediente.id }) }}">{{expediente.numeroInterno}}</a>
	</li>
{% endif %}

