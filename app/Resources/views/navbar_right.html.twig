{% set route = app.request.attributes.get('_route') %}
{% set path = app.request.pathInfo %}

{# ----------------------------EXPEDIENTES---------------------------- #}
{% if route == "list_expedientes" %}
	<li>
		<a id="nav-new-expediente" href="{{path('expedientes_new')}}">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			Nuevo Expediente
		</a>
	</li>
{% endif %}

{% if route == "expedientes_show" %}
	<li>
		<a id="nav-new-expediente" href="{{ path('expedientes_edit', {'id': expediente.id }) }}">
			<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
			Editar Expediente
		</a>
	</li>
